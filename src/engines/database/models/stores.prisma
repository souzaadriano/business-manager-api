model Stores {
    id        String    @id
    name      String    @unique
    owner     String
    createdAt DateTime  @default(now())
    updateAt  DateTime  @default(now())
    deletedAt DateTime?

    user      Users       @relation(fields: [owner], references: [id])
    UserStore UserStore[]

    @@map("stores")
}

model UserStore {
    storeId String
    userId  String

    user  Users  @relation(fields: [userId], references: [id])
    store Stores @relation(fields: [storeId], references: [id])

    @@id([storeId, userId])
    @@map("user_store")
}

//@relations
model Users {
    id        String      @id
    UserStore UserStore[]
    Stores    Stores[]

    @@map("users")
}
